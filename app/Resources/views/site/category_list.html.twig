{% block body %}
{% if photo %}
<div class="panel panel-{{ random([
'primary',
'success', 
'info',
'warning', 
'danger']) }}
">
<div class="panel-heading">
	{% for row in photo|slice(0, 1) %}
	<a href="categories/{{row.categories.id}}" class="color"><h3 class="panel-title">Category {{row.categories.title}} {% endfor %}</h3></a>
</div>
<div class="panel-body">
	{% for row in photo %}
	<div class="col-xs-6 col-sm-4 col-md-3 col-lg-3">
		<div class="thumbnail">
			<a href ="photo/{{row.id}}"><img src='../{{row.image}}' width="300" hight="300" /></a>
		</div>

	</div>
	{% endfor %}
</div>
</div>
{% endif %}
{% endblock %}
