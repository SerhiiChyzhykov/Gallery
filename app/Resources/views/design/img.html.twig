{% extends 'base.html.twig' %}

{% block body %}

<div class="row">

	<div class="col-xs-1 col-sm-1 col-md-1 ">
	</div>
	{% for row in photo %}
		<div class="col-xs-12 col-sm-6 col-md-7 col-lg-8">
			<div class="thumbnail">
				<img src='../{{row.image}}' width="600" hight="600" />
			</div>
			<div class="panel panel-info">
				<div class="panel-heading">
					<h3 class="panel-title">{{row.title}}</h3>
				</div>
				<div class="panel-body">
					{{row.description}}
				</div>
			</div>
		</div>
	{% endfor %}
	<div class="col-xs-12 col-sm-4 col-md-3 col-lg-3">
		<div class="panel panel-warning">
			<div class="panel-heading">
				<h3 class="panel-title">Comment form</h3>
			</div>
			<div class="panel-body">
<form action="" method="POST" role="form">
	<legend>Send message</legend>

	<div class="form-group">
		<label for="">Message:</label>
		<input type="text" name="post" class="form-control" id="" placeholder="Input field">
	</div>

	

	<button type="submit" name="send" class="btn btn-primary">Submit</button>
</form>

				
					
				
			</div>

		</div>

		<div class="panel-group" >
			<div class="panel panel-info">
				<div class="panel-heading">
					<h3 class="panel-title">Last comments</h3>
				</div>
				<div class="panel-body">
					{% for row in post %}
					<p>
						<span class="label label-{{ random(['default',
                        'primary',
                        'success', 
                        'info',
                        'warning', 
                        'danger']) }} text-capitalize">{{ row.usernameId.username }}</span>
						<div class="world">{{ row.post }}</p><br/>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</div>



{% endblock %}
