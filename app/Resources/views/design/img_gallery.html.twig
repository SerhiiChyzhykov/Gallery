{% extends 'base.html.twig' %}

{% block body %}

<div class="content clearfix">
	<div class="container">
	
		{% for row in photo %}
		<div class="col-xs-9 col-sm-5 col-md-4 col-lg-3">
			<div class="thumbnail">
				<a href='/photo/{{ row.id }}'>
					<img src='/{{ row.image }}' width="400" hight="400" title='увеличить'></a>
					<div class="caption">
						<h3>{{ row.title }}</h3>
				
						<span class="label label-{{ random(['default','success','info','warning','danger']) }}">
						
						{{ row.categories.title }}</span>
					
						<br/><br/>
						<p>{{ row.description }}</p>
						<p><a href='/photo/{{ row.id }}' class="btn btn-primary " >Full width</a>
							<a href="/gallery?user={{ row.username.id }}" class="btn btn-default" role="button">User's album</a>
						</p>
					</div>
				</div>
			</div>
			{% endfor %}
			</div>
				


{% endblock %}
