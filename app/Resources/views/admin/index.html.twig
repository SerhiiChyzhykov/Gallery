{% extends '/admin/header.html.twig' %}
{% block body %}
<!-- Main content -->
<div class="content">
	<!-- Page header -->
	<div class="page-header page-header-default">
		<div class="page-header-content">
			<div class="page-title">
				<h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Home</span></h4>
			</div>
			<a class="heading-elements-toggle"><i class="icon-more"></i></a>
		</div>
		<div class="breadcrumb-line">
			<ul class="breadcrumb">
				<li class="active"><i class="icon-home2 position-left"></i> Home</li>
			</ul>
			<a class="breadcrumb-elements-toggle"><i class="icon-menu-open"></i></a>
		</div>
	</div>
	<!-- /page header -->
	<!-- Content area -->
	<!-- Daily financials -->
	<div class="panel panel-flat">
		<div class="panel-heading">
			<h6 class="panel-title"><a href="/admin/photos">New Images</a></h6>
			<a class="heading-elements-toggle">
				<i class="icon-more"></i>
			</a>
		</div>
		<div class="panel-body">
			<div class="row">
				{% for row in photos %}
				<div class="col-lg-3 col-sm-6">
					<div class="thumbnail">
						<div class="thumb">
							<img src="{{row.image}}" width="275" height="175">
							<div class="caption-overflow">
								<span>
									<a href="#" data-popup="lightbox" rel="gallery" class="btn border-white text-white btn-flat btn-icon btn-rounded"><i class="icon-plus3"></i></a>
									<a href="/photo/{{row.id}}" class="btn border-white text-white btn-flat btn-icon btn-rounded ml-5" ><i class="icon-link2"></i></a>
								</span>
							</div>
						</div>
					</div>
				</div>
				{% endfor %}
			</div>
			<!-- /daily financials -->
		</div>
	</div>
	<div class="panel panel-flat col-sm-6">
		<div class="panel-heading">
			<h6 class="panel-title"><a href="/admin/comments">New Comments</a></h6>
			<a class="heading-elements-toggle">
				<i class="icon-more"></i>
			</a>
		</div>
		<div class="panel-body">
			<div class="table-responsive">
				<table class="table text-nowrap">
					<thead>
						<tr class="active border-double">
							<th style="width: 50px">Date</th>
							<th style="width: 300px;">User</th>
							<th>Image</th>
							<th>Comment</th>
							<th class="text-center" style="width: 20px;"><i class="icon-arrow-down12"></i></th>
						</tr>
					</thead>
					<tbody>
						{% for row in comments %}
						<tr>
							<td class="text-center">
								<h6 class="no-margin">{{row.date.date|date("Y-m-d")}} </h6>
							</td>
							<td>
								<div class="media-left media-middle">
									<a href="/admin/user/{{row.usernameid.id}}" class="btn bg-{{ random(['pink', 'violet', 'purple' ,'indigo' , 'blue', 'teal', 'green' , 'orange', 'brown', 'grey', 'slate' ]) }}{{random(['-300','-400','','-600','-700','-800'])}} btn-rounded btn-icon btn-xs">
										{% if row.usernameId.avatar is empty %}
										<img src="/img/user_icon.jpg">
										{% else %}
										<img src="{{row.usernameId.avatar}}">
										{% endif %}
									</a>
								</div>
								<div class="media-body">
									<a href="/admin/user/{{row.usernameid.id}}" class="display-inline-block text-default text-semibold letter-icon-title">{{row.usernameid.username}}</a>
									{% if row.date.date|date("Y-m-d") == date %}
									<div class="text-muted text-size-small">
										<span class="label bg-success-400">New</span>
									</div>
									{% endif %}
								</div>
							</td>
							<td>
								<a href="/photo/{{row.imageid.id}}">
									<i class="icon-link text-green"></i>
								</a>
							</td>
							<td>
								<span class="display-block text-muted">{{row.post}}</span>
							</td>
							<td class="text-center">
								<a href="/admin?delete={{row.id}}"><i class="icon-cross2 text-danger"></i></a>
							</td>
						</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
		<!-- /dashboard content -->
	</div>
	<div class="panel panel-flat col-sm-6">
		<div class="panel-heading">
			<h6 class="panel-title">New Block</h6>
			<a class="heading-elements-toggle">
				<i class="icon-more"></i>
			</a>
		</div>
		<div class="panel-body">
		</div>
	</div>
	{% endblock %}
